{
  "include": ["src"],
  "exclude": ["bin/", "node_modules/"],
  "compilerOptions": {
    //
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    //
    "noEmit": true,
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "src/"
  }
}
